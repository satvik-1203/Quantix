# ==============================
# apps/server (.env / .env.local)
# ==============================

# Server
PORT=3000
# Web dev server origin for CORS
CORS_ORIGIN=http://localhost:3001

# Database (used by @workspace/drizzle)
# Example: postgresql://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/capstone_class

# LLM providers (optional depending on features you use)
# Used for embeddings + some server-side generation flows
OPENAI_API_KEY=
# Optional alternative name used in a few places
OPENAI_API_KEY_PRIVATE=
EMBEDDING_MODEL=text-embedding-3-large

# Pinecone (optional; enables email-thread RAG retrieval)
PINECONE_ENDPOINT=
PINECONE_KEY=
PINECONE_NAMESPACE=
PINECONE_BATCH_SIZE=32

# Vapi (optional; used for phone call cost backfill + voice workflows)
VAPI_PRIVATE_KEY=

# AgentMail (optional; used for email test execution)
AGENTMAIL_KEY=

# Scripts / utilities (optional)
DATA_DIR=./data
ANALYTICS_OUT_DIR=./data/email-analytics
ANALYTICS_OUT_FILE=./data/email-analytics.csv

# Evals (optional)
EVAL_COUNT=
EVAL_LOOP_COUNT=
EVAL_JUDGE_RUNS=
EVAL_TESTCASE_DESCRIPTION=
EVAL_TESTCASE_EMPHASIS=balanced coverage with guardrails
